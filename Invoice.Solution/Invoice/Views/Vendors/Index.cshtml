@{
  Layout = "_Layout";
}
@using Invoice.Models;

<div class="container">
  <h1>vendor</h1>
  @if (@Model.Count == 0)
  {
    <h3>No vendors have been added yet!</h3>
  } 
  @foreach (Vendor vendor in Model)
  {
    <h3><a href='/vendors/@vendor.Id'>@vendor.Name</a></h3>
  }
  <form action="/vendors/delete" method="post">
    <button type="submit" name="button">Clear all vendors</button>
  </form>
  <p><a href='/'>Back home</a></p>
</div>
@await Html.PartialAsync("Footer")
